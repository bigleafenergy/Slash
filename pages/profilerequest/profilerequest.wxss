/* pages/skilldetail/skilldetail.wxss */
.background{
  background-color: #EFEFE6;
  /* height: 100%; */
  min-height: 100vh;
  padding-bottom: 18rpx;
}

.card-user {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.card-user image {
  /* position: relative; */
  width: 100px;
  align-self: left;
  margin-left: 27px;
  /* margin-left: auto;
  margin-right: auto; */
  border-radius: 50px;
}




.card-title{
  /* font-size: 40rpx; */
  padding-top: 15px;
  color: black;
  /* margin-top: 20px; */
  /* top: 20px; */
  margin-left: 28px;
  /* margin-right: 28px; */
  width: 600rpx;
  display: flex;
  flex-wrap:wrap;

  font-family: Poppins;
  font-style: normal;
  font-weight: 500;
  font-size: 24px;
  line-height: 32px;
}

.btnbtn{
  width: 15px;
  height: 15px;
  position: relative;
  align-content: right;
  margin-left: 1em;
}

.texttext{
  font-size: small;
  font-weight: 100;
}
.commentssection{
  margin-inline: 3px;
}

.space {
  width: 100%;
  height: 20rpx;
  /* background-color: white; */
}

.spacebig {
  width: 100%;
  height: 35px;
  /* background-color: white; */
}

.line {
  width: 315px;
  height: 2rpx;
  margin-left: 30px;
  /* align-content: center; */
  background:  #C4C4C4;
}





.card-info {
  display: flex;
  margin-top: 5rpx;
}


.card-info text {
  font-size: 24rpx;
  color: rgb(149,149,149);
  display: flex;
  margin-left: 15px;

  font-family: Poppins;
  font-style: normal;
  font-weight: bold;
  font-size: 14px;
  /* line-height: 24px; */

  /* letter-spacing: 0.02em; */


  color: #333333;


}

.card-info image {
  width: 35rpx;
  height: 35rpx;
  margin-left: 40px;
}

.card-content {
  display: flex;
  margin-top: 5rpx;
  margin-left: 45px;
  margin-right: 45px;

  font-family: Poppins;
  font-style: normal;
  font-weight: normal;
  font-size: 16px;
  line-height: 28px;

  letter-spacing: 0.02em;

  color: #111111;
}

.swapbutton {
  margin-left: 117px;
  margin-right: 117px;
  margin-top: 35px;

  background: #111111;
  border-radius: 20px;
  color: white;
  font-family: Poppins;
  font-style: normal;
  font-weight: 600;
  font-size: 16px;

}

.usertag {
  display: flex;
  flex-direction: column;
}

.username {

  margin-left: 10px;
  display: flex;
  font-family: Poppins;
  font-style: normal;
  font-weight: bold;
  font-size: 18px;
  line-height: 24px;

  letter-spacing: 0.01em;

  color: #333333;
}

.userbio {
  margin-left: 10px;
  margin-top: 10px;
  font-family: Poppins;
  font-style: normal;
  font-weight: normal;
  font-size: 14px;
  line-height: 20px;


  color: #333333;
}

.userlabel {
  font-family: 'Poppins';
  background-color: #EFEFE6;
  border-radius: 15px;
  border: 1px solid #000000;
  line-height: 28px;
  font-size: 16px;
  display: inline-flex;
  padding: 0 16rpx;
  margin-inline: 8rpx;
  margin-top: 8rpx;
  width: fit-content;
}

.card-label {
  margin-left: 30px;
  margin-top: 20px;
  padding-bottom: 30px;
}
