/* pages/community/community.wxss */

.nav {
  position: relative;
  width: 100%;
  height: 125px;
  display: flex;
  background-color: rgb(253,253,253);
}

.cards {
  position: relative;
  width: 100%;
  height: 130px;
}

.card {
  height: 125px;
  padding-top: 10rpx;
  margin-left: 20rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.card-avatar {
  width: 88px;
  display: flex;
}

.card-avatar image {
  position: relative;
  width: 88px;
  align-self: center;
  margin-left: auto;
  margin-right: auto;
}

.card-text {
  width: 260px;
  height: 150x;
  left: 95px;
}

.card-title {
  font-weight: 700;
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 30rpx;
}
.card-content {
  line-height: 20px;
  color: #646566;
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 10rpx;
  margin-left: 20rpx;
}

.space {
  width: 100%;
  height: 20rpx;
  background-color: white;
}

.card-bottom {
  display: flex;
  margin-top: 10rpx;
}
.card-bottom view {
  font-size: 24rpx;
  color: rgb(149,149,149);
  margin-right: 30rpx;
  display: flex;
}
.card-bottom image {
  width: 35rpx;
  height: 35rpx;
}
.card-bottom text {
  line-height: 35rpx;
}


.labels {
  font-family: 'Poppins';
  background-color: #EFEFE6;
  border-radius: 15px;
  border: 1px solid #000000;
  line-height: 28px;
  font-size: 16px;
  display: inline-flex;
  padding: 0 16rpx;
  margin-inline: 8rpx;
  margin-top: 8rpx;
  width: fit-content;
}

.labels-selected {
  font-family: 'Poppins';
  background-color: #C4BBDD;
  font-weight: bold;
  border-radius: 15px;
  border: 1px solid #000000;
  line-height: 28px;
  font-size: 16px;
  display: inline-flex;
  padding: 0 16rpx;
  margin-inline: 8rpx;
  width: fit-content;
}

.single-label-selected {
  display: flex;
  align-items: center;
  justify-content: center; 
}

.labels-selected image {
margin-top: 4rpx;
}

.primary-button {
background: #111111;
border-radius: 20px;
width: 150px;
height: 40px;
color: #fff;
font-weight: 600;
font-size: 16px;
line-height: 24px;
display: flex;
flex-direction: row;
align-items: center;
padding: 0px 24px;
}

.unselected {
  font-weight: 700;
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.selected {
  font-weight: 700;
  font-size: 28rpx;
  color: #C4BBDD;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 20rpx;
  margin-left: 20rpx;
}